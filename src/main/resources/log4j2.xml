<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="Skadi">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [%t] %logger - %msg%n"/>
		</Console>
		<RollingFile name="RollingFile" fileName="${sys:user.home}/.skadi/skadi.log"
					 filePattern="${sys:user.home}/.skadi/skadi_old_%i.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level [%t] %logger - %msg%n"/>
			<Policies>
				<OnStartupTriggeringPolicy/>
			</Policies>
			<DefaultRolloverStrategy max="3"/>
		</RollingFile>
	</Appenders>

	<Loggers>
		<Root level="WARN">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="RollingFile"/>
		</Root>
		<Logger name="eu.over9000.skadi" level="ALL" additivity="false">
			<AppenderRef ref="Console"/>
			<AppenderRef ref="RollingFile"/>
		</Logger>
	</Loggers>

</Configuration>