<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="Skadi">

	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger - %msg%n" />
		</Console>
		<File name="File" fileName="${sys:user.home}/.skadi/skadi.log">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level  %logger - %msg%n" />
		</File>
	</Appenders>

	<Loggers>
		<Root level="WARN">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Root>
		<Logger name="eu.over9000.skadi" level="ALL" additivity="false">
			<AppenderRef ref="Console" />
			<AppenderRef ref="File" />
		</Logger>
	</Loggers>

</Configuration>